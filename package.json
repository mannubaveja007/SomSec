{
    "name": "somnia-smart-contract-analyzer",
    "version": "1.0.0",
    "description": "AI-powered smart contract security analyzer for Somnia network",
    "scripts": {
        "dev": " nodemon",
        "build": "rimraf dist && cross-env NODE_ENV=production tsc && tsc-alias dist --outDir ./dist && cp -r src/routes dist/src/ && cp -r src/public dist/src/",
        "vercel-build": "npm run build",
        "preview": "NODE_ENV=development node dist/src/app.js",
        "start": "NODE_ENV=production node dist/src/app.js",
        "test": "jest --silent=false",
        "test:watch": "jest --watch",
        "ts-check": "tsc --noEmit",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/app.ts",
        "ext": "ts, js"
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "@headlessui/react": "^2.2.8",
        "@heroicons/react": "^2.2.0",
        "autoprefixer": "^10.4.21",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "framer-motion": "^12.23.13",
        "morgan": "^1.10.0",
        "node-fetch": "^2.7.0",
        "postcss": "^8.5.6",
        "reflect-metadata": "^0.2.2",
        "tailwindcss": "^3.4.17",
        "winston": "^3.14.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.2.0",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "cross-env": "^7.0.3",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-typescript": "^0.14.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.4",
        "prettier": "^2.8.8",
        "rimraf": "^6.0.1",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.4",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "tslib": "^2.7.0",
        "typescript": "^5.5.4",
        "yorkie": "^2.0.0"
    },
    "author": "Ironblocks",
    "license": "MIT"
}
